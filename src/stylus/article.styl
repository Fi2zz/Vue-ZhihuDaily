
.headline
     position relative
    .img-place-holder
      position: relative
      &.loaded
        height auto
        max-height 375px

.img-mask
  position: absolute;
  top: 0;
  width: 100%;
  height: 100%;
  background: linear-gradient(to bottom, rgba(0, 0, 0, 0) 25%, rgba(0, 0, 0, 0.6) 100%);

.article-cover
  max-width: 100%;
  vertical-align: top;
  margin-top: -18%;
  width: 640px;

.img-wrap

  .headline-title
    margin: 20px 0;
    bottom: 10px;
    z-index: 1;
    position: absolute;
    color: white;
    text-shadow: 0 1px 2px rgba(0,0,0,0.3);

  .img-source
    position: absolute;
    bottom: 10px;
    z-index: 1;
    font-size: 12px;
    color: rgba(255,255,255,.6);
    right: 40px;
    text-shadow: 0px 1px 2px rgba(0,0,0,.3);