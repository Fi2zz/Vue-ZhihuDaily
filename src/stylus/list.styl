.app
  &-list
    &-view
      list-style-type: none
      padding-left: 0
      width: 100%
      flex 1
      margin: 0
      &-item

        display: flex
        flex 1
        border-bottom 1px #ddd solid
        justify-content flex-start
        align-items flex-start
        height: 64px
        padding-top: 16px
        padding-bottom: 16px
        &-title
          font-size: 16px
          font-weight: normal
          display: flex
          flex .7
          margin: 0
          padding-top: 0
          padding-bottom: 0
          padding-left: 16px
          line-height 1.5
          height: 100%
          padding-right: 16px
        &-cover
          width: 100%
          height: 100%
          display: block
        &-image
          display: flex
          flex .3
          align-items center
          justify-content center
          height: 100%
          padding-right: 16px
          img
            width: 100%
            display: block
            height: 100%
            border: none
    &-swiper
      height 240px
