.view-bar {
    &-wrap {
        span {
            width: 44px;
            height: 44px;
            position: absolute;
            left: 0;
            top: 0;
            bottom: 0;
            line-height: 44px;
            text-align: center;
            z-index: 9;
        }

        .post-a-comment {
            display: block;
            position: absolute;
            left: 0;
            right: 0;
            bottom: 0;
            top: 0;
            z-index: 8;
            text-align: center;
            font-size: 16px;
            line-height: 44px;
        }
    }
}

.double-arrows {
    &-down, &-up {
        display: inline-block;
        vertical-align: top;
        width: 32px;
        height: 32px;
        position: relative;

        &:before, &:after {
            display: block;
            width: 32px;
            height: 32px;
            content: '';
            position: absolute;
            left: 0;
            right: 0;
            transform: rotate(45deg) scale(0.3, 0.3) translate(-50%, -50%);
        }
    }

    &-up {
        &:before, &:after {
            border: 4px #ddd solid;
            border-right: none;
            border-bottom: none;
        }

        &:before {
            top: 6px;
        }

        &:after {
            top: 10px;
        }
    }

    &-down {
        &:before, &:after {
            border: 4px #ddd solid;
            border-left: none;
            border-top: none;
        }

        &:before {
            top: 2px;
        }

        &:after {
            top: 6px;
        }
    }
}