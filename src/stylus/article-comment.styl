

.view
  &-comment
    display: block
    padding:44px 16px 44px
    .view-header
      position: fixed
      top: 0
      right: 0
      left: 0
      height: 44px
      z-index: 99

      &-wrap
        height: 44px
        background: $brand-primary
        color #fff
        text-align: center
        font-size: 16px
        line-height 44px
    &-length
      height: 32px
      line-height 32px
      font-size: 12px
      margin-bottom: 16px
      position: relative
      &:after
        display: block
        content ''
        height: 1px
        background $brand-gray
        position: absolute
        bottom:0
        left: -16px
        right: -16px
    &-item
      padding-bottom: 16px
      margin-bottom: 16px
      position: relative
      &:nth-last-of-type(1)
        &:after
          display: none
      &:after
        display: block
        content ''
        height: 1px
        background $brand-gray
        position: absolute
        bottom:0
        left: (28+16)px
        right: -16px

      &-bio
        display: flex
        height: 28px
        position: relative
        .bio-name
          font-size: 14px
          line-height 28px

        .avatar
          width: 28px
          height: 28px
          margin-right: 16px
          img
            display: block
            border-radius 50%
            width: 100%
        .like
          position: absolute
          top: 50%
          right: 0
          height: 28px
          line-height 28px
          transform  translateY(-50%)
          font-size: 12px
          .icon
              font-size: 12px

      &-content
        font-size: 14px
        padding-left: (28+16)px
        line-height 1.5



  &-content
    *
      word-wrap break-word
      word-break break-all
